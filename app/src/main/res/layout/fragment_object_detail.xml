<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo_juego"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:clipToPadding="false"
        android:clipChildren="false">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardImage"
            android:layout_width="match_parent"
            android:layout_height="280dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            app:cardUseCompatPadding="true"
            app:strokeColor="#D4AF37"
            app:strokeWidth="2dp"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/ivDetailImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                tools:src="@tools:sample/backgrounds/scenic" />
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:cardBackgroundColor="#FFFEF7"
            app:cardCornerRadius="16dp"
            app:cardElevation="3dp"
            app:cardUseCompatPadding="true"
            app:strokeColor="#C5A000"
            app:strokeWidth="1.5dp"
            app:layout_constraintTop_toBottomOf="@id/cardImage">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp">

                <TextView
                    android:id="@+id/tvDetailName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#3E2723"
                    android:textSize="28sp"
                    android:textStyle="bold"
                    android:fontFamily="serif"
                    android:letterSpacing="0.02"
                    tools:text="Dama de Elche" />

                <TextView
                    android:id="@+id/tvDetailCategory"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:textColor="#D4AF37"
                    android:textSize="16sp"
                    android:textStyle="bold|italic"
                    tools:text="Categoría: Escultura" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginVertical="20dp"
                    android:background="#D4AF37"
                    android:alpha="0.3" />

                <TextView
                    android:id="@+id/tvDetailDescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#5D4037"
                    android:textSize="19sp"
                    android:lineSpacingExtra="6dp"
                    android:fontFamily="sans-serif-light"
                    tools:text="Descripción detallada del objeto..." />

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnLearnMore"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Aprender más sobre esta obra"
            android:padding="18dp"
            android:textSize="17sp"
            android:textStyle="bold"
            android:backgroundTint="#FFF8E1"
            android:textColor="#3E2723"
            app:cornerRadius="16dp"
            app:strokeColor="#C5A000"
            app:strokeWidth="2dp"
            app:elevation="2dp"
            app:layout_constraintTop_toBottomOf="@id/cardInfo" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnTechnicalDetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="20dp"
            android:text="Detalles técnicos"
            android:padding="18dp"
            android:textSize="17sp"
            android:textStyle="bold"
            android:backgroundTint="#FAF0E6"
            android:textColor="#3E2723"
            app:cornerRadius="16dp"
            app:strokeColor="#C5A000"
            app:strokeWidth="2dp"
            app:elevation="2dp"
            app:layout_constraintTop_toBottomOf="@id/btnLearnMore"
            app:layout_constraintBottom_toBottomOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>