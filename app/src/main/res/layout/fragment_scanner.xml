<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/gameBackground"
    tools:context=".ScannerFragment">

    <TextView
        android:id="@+id/tvScannerTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="EscÃ¡ner de Objetos"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="?attr/gameTextPrimary"
        android:fontFamily="serif"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/scannerPlaceholder"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="32dp"
        app:cardBackgroundColor="?attr/gameCardBackground"
        app:cardCornerRadius="16dp"
        app:cardElevation="8dp"
        app:strokeColor="?attr/gameStrokeColor"
        app:strokeWidth="2dp"
        app:layout_constraintTop_toBottomOf="@id/tvScannerTitle"
        app:layout_constraintBottom_toTopOf="@id/btnInventory"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.camera.view.PreviewView
            android:id="@+id/previewView"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnInventory"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="32dp"
        android:text="Ver inventario"
        android:padding="16dp"
        android:textSize="18sp"
        android:textStyle="bold"
        android:backgroundTint="?attr/gameCardBackground"
        android:textColor="?attr/gameTextPrimary"
        app:cornerRadius="12dp"
        app:strokeColor="?attr/gameStrokeColor"
        app:strokeWidth="2dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>