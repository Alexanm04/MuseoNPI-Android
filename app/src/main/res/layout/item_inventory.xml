<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardBackgroundColor="@color/egypt_card"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp"
    app:strokeColor="@color/egypt_gold"
    app:strokeWidth="1dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp">

        <com.google.android.material.card.MaterialCardView
            android:layout_width="80dp"
            android:layout_height="80dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="0dp"
            app:cardBackgroundColor="#0D000000">

            <ImageView
                android:id="@+id/ivObject"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitCenter"
                android:padding="4dp"
                android:contentDescription="@string/imagen_del_objeto"
                tools:src="@tools:sample/avatars" />
        </com.google.android.material.card.MaterialCardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="16dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvObjectName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/egypt_text_primary"
                android:textSize="18sp"
                android:textStyle="bold"
                tools:text="Nombre del objeto" />

            <TextView
                android:id="@+id/tvObjectCategory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/egypt_gold"
                android:textSize="14sp"
                android:textStyle="italic"
                tools:text="CategorÃ­a" />
        </LinearLayout>
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>