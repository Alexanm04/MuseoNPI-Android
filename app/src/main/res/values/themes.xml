<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.MuseoNPI" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:windowBackground">@color/egypt_bg</item>
        <item name="colorPrimary">@color/egypt_gold</item>
        <item name="colorOnPrimary">@color/egypt_text_primary</item>
        <item name="colorSurface">@color/egypt_bg</item>
        <item name="colorControlNormal">@color/egypt_text_primary</item>
        
        <!-- Game Attributes (Normal) -->
        <item name="gameOption1Bg">@color/game_opt1_n</item>
        <item name="gameOption1Text">@color/text_white</item>
        <item name="gameOption2Bg">@color/game_opt2_n</item>
        <item name="gameOption2Text">@color/text_white</item>
        <item name="gameOption3Bg">@color/game_opt3_n</item>
        <item name="gameOption3Text">@color/text_white</item>
        <item name="gameOption4Bg">@color/game_opt4_n</item>
        <item name="gameOption4Text">@color/text_white</item>
        
        <item name="gameBackground">@drawable/fondo_juego</item>
        <item name="gameCardBackground">@color/egypt_card</item>
        <item name="gameTextPrimary">@color/egypt_text_primary</item>
        <item name="gameTextSecondary">@color/egypt_text_secondary</item>
        <item name="gameStrokeColor">@color/egypt_gold</item>
    </style>

    <style name="Theme.MuseoNPI" parent="Base.Theme.MuseoNPI" />

    <style name="Theme.MuseoNPI.Deuteranopia" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:windowBackground">@color/deut_bg</item>
        <item name="colorPrimary">@color/deut_primary</item>
        <item name="colorOnPrimary">@color/deut_on_primary</item>
        <item name="colorSurface">@color/deut_surface</item>
        <item name="colorOnSurface">@color/deut_text_primary</item>
        <item name="android:colorBackground">@color/deut_bg</item>
        <item name="colorOnBackground">@color/deut_text_primary</item>
        
        <item name="android:textColorPrimary">@color/deut_text_primary</item>
        <item name="android:textColorSecondary">@color/deut_accent</item>
        <item name="android:textColor">@color/deut_text_primary</item>
        <item name="android:textColorHint">@color/deut_hint</item>
        
        <!-- Ensure buttons pick up high contrast -->
        <item name="colorSecondary">@color/deut_accent</item>
        <item name="colorOnSecondary">@color/deut_text_primary</item>
        
        <item name="colorControlNormal">@color/deut_text_primary</item> <!-- Icons white -->
        <item name="colorControlActivated">@color/deut_primary</item> <!-- Active radio/checkbox -->
        
        <item name="android:itemTextAppearance">@style/BottomNavTextNormal</item>
        
        <!-- Fix for BottomNav Indicator contrast -->
        <item name="colorSecondaryContainer">@color/deut_indicator_pill</item>
        <item name="colorOnSecondaryContainer">@color/deut_primary</item>
        
        <item name="bottomNavigationStyle">@style/Widget.MuseoNPI.BottomNavigationView.Deuteranopia</item>

        <!-- Game Attributes (Deuteranopia) -->
        <item name="gameOption1Bg">@color/game_opt1_d</item>
        <item name="gameOption1Text">@color/text_white</item>
        <item name="gameOption2Bg">@color/game_opt2_d</item>
        <item name="gameOption2Text">@color/text_white</item>
        <item name="gameOption3Bg">@color/game_opt3_d</item>
        <item name="gameOption3Text">@color/text_black</item>
        <item name="gameOption4Bg">@color/game_opt4_d</item>
        <item name="gameOption4Text">@color/text_black</item>
        
        <item name="gameBackground">@color/deut_bg</item>
        <item name="gameCardBackground">@color/deut_surface</item>
        <item name="gameTextPrimary">@color/deut_text_primary</item>
        <item name="gameTextSecondary">@color/deut_accent</item>
        <item name="gameStrokeColor">@color/deut_primary</item>
    </style>

    <style name="Widget.MuseoNPI.BottomNavigationView.Deuteranopia" parent="Widget.Material3.BottomNavigationView">
        <item name="android:background">@color/deut_bg</item>
    </style>

    <style name="CustomAlertDialog" parent="Theme.MaterialComponents.DayNight.Dialog.Alert">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowMinWidthMajor">90%</item>
        <item name="android:windowMinWidthMinor">90%</item>
    </style>

    <!-- Navigation Styles with fixed sizes (dp) or scaled (sp) - Using explicit sizes to force diff -->
    <style name="BottomNavTextSmall">
        <item name="android:textSize">12sp</item>
    </style>
    
    <style name="BottomNavTextNormal">
        <item name="android:textSize">16sp</item>
    </style>
    
    <style name="BottomNavTextLarge">
        <item name="android:textSize">20sp</item>
    </style>
</resources>